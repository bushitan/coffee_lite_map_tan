
/******冒泡*******/
.callout{
    /* position: absolute; */
    top: 10px;
    left: 30px;
    right: 30px;
    padding: 15px;
}
.callout .box{
    padding: 15px;
    background-color: rgba(255, 255, 255, 0.9);
}
.poi_title{
    font-size: 11pt;
    font-weight: bolder;
    text-align: center;
}



.callout .cover{
    width: 96px;
    height: 64px;
}
.callout .content{
    padding-left:10px 
}
.callout .name {    
    width:100px;
    font-size: 11pt;
}
.callout .title{
    font-size: 9pt;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
    margin: 3px 0 ;
}
.callout .distance{
    font-size: 9pt;
    color: #888;
}
.callout .tool{
    display: flex;
    /* justify-content: flex-end; */
    margin-top: 5px;
}
.callout .btn{
    font-size: 9pt;
    color: #fff;
    padding: 8px 10px;
    border-radius: 5px;
}
.callout .nav{
    background-color:#ffbc34;
    margin-right: 10px;

}
.callout .collect{
    background-color:yellowgreen;
    margin-right: 10px;
}
.callout .cancle{
    background-color:#eee;
    color: #141414;
    text-align: center;
    margin-top: 10px;
}




.user{
    display: flex;
    align-items: center;
}
.user_logo{
    border-radius: 50%;
    width: 36px;
    height: 36px;
    margin:10px 10px 10px 0;
}







